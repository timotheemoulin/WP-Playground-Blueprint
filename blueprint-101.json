{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "plugins": [],
  "preferredVersions": {
    "php": "8.4",
    "wp": "6.8"
  },
  "features": {},
  "login": true,
  "siteOptions": {
    "permalink_structure": "/%postname%-%post_id%/"
  },
  "landingPage": "/wp-admin/edit.php",
  "steps": [
    {
      "step": "updateUserMeta",
      "meta": {
        "admin_color": "modern"
      },
      "userId": 1
    },
    {
      "step": "installTheme",
      "themeData": {
        "resource": "wordpress.org/themes",
        "slug": "twentytwentyfour"
      }
    },
    {
      "step": "mkdir",
      "path": "/wordpress/wp-content/plugins/hellodashboard"
    },
    {
      "step": "writeFile",
      "data": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/wptrainingteam/hellodashboard/refs/heads/main/hellodashboard.php"
      },
      "path": "/wordpress/wp-content/plugins/hellodashboard/plugin.php"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "hellodashboard/plugin.php"
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/timotheemoulin/WP-Playground-Blueprint/refs/heads/master/wp-export.xml"
      }
    }
  ]
}

{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "plugins": [],
  "preferredVersions": {
    "php": "8.4",
    "wp": "6.8"
  },
  "features": {},
  "login": true,
  "siteOptions": {
    "blogname": "Tim's Blueprint",
    "permalink_structure": "/%postname%-%post_id%/"
  },
  "landingPage": "/wp-admin/edit.php",
  "steps": [
    {
      "step": "mkdir",
      "path": "/wordpress/wp-content/plugins/cleanup"
    },
    {
      "step": "writeFile",
      "data": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/timotheemoulin/WP-Playground-Blueprint/refs/heads/master/cleanup.php"
      },
      "path": "/wordpress/wp-content/plugins/cleanup/cleanup.php"
    },
    {
      "step": "activatePlugin",
      "pluginPath": "cleanup/cleanup.php"
    },
    {
      "step": "mkdir",
      "path": "/wordpress/wp-content/uploads/2025/06"
    },
    {
      "step": "writeFile",
      "data": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/timotheemoulin/WP-Playground-Blueprint/refs/heads/master/img/image-de-bureau.webp"
      },
      "path": "/wordpress/wp-content/uploads/2025/06/image-de-bureau.webp"
    },
    {
      "step": "writeFile",
      "data": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/timotheemoulin/WP-Playground-Blueprint/refs/heads/master/img/image-de-cafe.webp"
      },
      "path": "/wordpress/wp-content/uploads/2025/06/image-de-cafe.webp"
    },
    {
      "step": "writeFile",
      "data": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/timotheemoulin/WP-Playground-Blueprint/refs/heads/master/img/image-de-paysage.webp"
      },
      "path": "/wordpress/wp-content/uploads/2025/06/image-de-paysage.webp"
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/timotheemoulin/WP-Playground-Blueprint/refs/heads/master/wp-export.xml"
      }
    },
    {
      "step": "setSiteOptions",
      "options": {
        "show_on_front": "page",
        "page_on_front": "2"
      }
    }
  ]
}
